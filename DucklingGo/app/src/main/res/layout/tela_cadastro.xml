<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"><![CDATA[
    tools:context=".MainActivity">



    ]]>

    <ImageView
        android:id="@+id/broken_egg_invertido2"
        android:layout_width="214dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/img7"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/broken_egg2"
        android:layout_width="214dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/img4"
        tools:layout_editor_absoluteX="-60dp"
        tools:layout_editor_absoluteY="578dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/cadastro_email"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:layout_marginBottom="96dp"
        android:hint="E-mail"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cadastro_senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_app" />

    <Button
        android:id="@+id/botao_cadastro"
        android:layout_width="132dp"
        android:layout_height="52dp"
        android:layout_marginBottom="212dp"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/cadastro_senha"
        android:layout_width="214dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/botao_cadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/cadastro_usuario"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:layout_marginBottom="28dp"
        android:hint="UsuÃ¡rio"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cadastro_senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nome_app"
        android:layout_width="166dp"
        android:layout_height="56dp"
        android:text="DUCKLING GO"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/cadastro_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>